
/* BUSCADOR */
::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
  color: lightgray;
  opacity: 1; /* Firefox */
}

:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: lightgraygray;
}

::-ms-input-placeholder { /* Microsoft Edge */
  color: lightgray;
}
.inner-addon {
  position: relative;
  height: 48px;
  width: 100%;
}
.inner-addon .icon{
  position: absolute;
  height: 100%;
}

.inner-addon .icon i {
  position: absolute;
  padding: 10px;
  pointer-events: none;
  font-size: 18px;
  color: #808080;
}

.left-addon .icon i {
  left:  5px;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.left-addon input  {
  padding-left: 40px;
  border: 2px solid #666;
  border-radius: 0.15rem;
  height: 100%;
  font-size: 1rem;
}
.left-addon input:focus  {
  border-color: #666;
  box-shadow: 0 0 0 0.05rem #666;
}

.list-group-item:hover{
  background-color: #dae0e5!important;
  color: black;
  font-weight: 600;
  font-size: 18px;
}

.custom-card > .card-header {
  padding: 0;
}

